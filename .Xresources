! do not scroll with output
!URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
!URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
!URxvt*scrollTtyKeypress: true
!URxvt.font: 9x15
!From the archwiki: fonts with a dash must be escaped with double dashes

! I can have Adwaita icons but either Adwaita has letters too seperate or changing letterSpace makes some icons unavailable
!URxvt.font: xft:Adwaita:size=18:antialias=true
URxvt.letterSpace: 0



URxvt.font: xft:FantasqueSansMono Nerd Font:size=18:antialias=true
URxvt.boldFont: xft:FantasqueSansMono Nerd Font:style=Bold:size=18:antialias=true
URxvt.italicFont: xft:FantasqueSansMono Nerd Font:style=Italic:size=18:antialias=true
URxvt.boldItalicFont: xft:FantasqueSansMono Nerd Font:Bold:Italic:size=18:antialias=true

!URxvt.font: xft:Adwaita:size=18
URxvt.scrollBar: false

! for a secondary screen not interested in the scrollback
!URxvt.secondaryScreen: 1
!URxvt.secondaryScroll: 0
! for beetter scrolling on second screen I can install from the AUR later

URxvt.perl-ext-common:  default,background,resize-font,selection-to-clipboard

! copy paste extension
URxvt.clipboard.autocopy: true
!URxvt.keysym.M-c: perl:clipboard:copy
!URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.C-S-0x43: eval:selection_to_clipboard
URxvt.keysym.C-S-0x56: eval:paste_clipboard
