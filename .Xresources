xterm*background:   black
xterm*foreground:   white

! used to fix what <alt> key does
!#XTerm.vt100.metaSendsEscape: true 

!this line and the one  below change the backspace doing [^H] or something
!#XTerm.vt100.backarrowKey: false
!#XTerm.ttyModes: erase ^?
XTerm.vt100.saveLines: 4096 ! 4096 lines. Good for scrolling through history in a session


! god the default font size sucks
!XTerm.vt100.faceName: Liberation Mono:size=10:antialias=false
!XTerm.vt100.font: 14x26



